@model Task21_1.ViewModels.LoginModel

<h3>Enter</h3>

<a asp-action="Register" asp-controller="Account">Registration</a>

<form asp-controller="Account" asp-action="Login" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Enter the Email</label>
            <input type="text" asp-for="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter the Password</label>
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Enter" class="btn btn-outline-dark"/>
        </div>
    </div>
</form>