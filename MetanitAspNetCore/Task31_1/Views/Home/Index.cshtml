@model IEnumerable<Task31_1.Models.User>
@{
    ViewData["Title"] = "Users List";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-controller="Home" asp-action="Create">Add</a>
</p>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                @item.Age
            </td>
            <td>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>