@model Task4_13.Models.ComputerList

@{
    ViewBag.Title = "Computers list";
}

<h2>Список компьютеров</h2>
@using (Html.BeginForm())
{
    <label for="ComputerName">Search by name</label>
    <input type="text" name="ComputerName" value="@Model.Filter.ComputerName" />
    <label for="Year">Search by year of issue</label>
    <input type="text" name="Year" value="@Model.Filter.Year" />
    <input type="submit" value="Поиск" />
}
<p>
    @Html.ActionLink("Add", "Create")
</p>
<table class="table">
    <tr>
        <th>Model</th>
        <th>Year</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Computers)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
                @Html.ActionLink("Attach Image", "AttachImage", new { id = item.Id })
            </td>
        </tr>
    }
</table>